#!/bin/bash
export GRADLE_USER_HOME="${GRADLE_USER_HOME:-$(pwd)/.gradle}"

if [ -z "$JAVA_HOME" ]; then
  echo "JAVA_HOME environment variable is not set."
  echo "Please set JAVA_HOME to your JDK installation directory."
  exit 1
fi

if [ -x "$(command -v java)" ]; then
  exec java -classpath "$GRADLE_USER_HOME/wrapper/dists/gradle-8.0-bin/cgvrx1tgy2r64x1i8j9y8v7a/gradle-8.0/lib/gradle-launcher-8.0.jar" org.gradle.launcher.GradleMain "$@"
else
  echo "Java is not installed or not in your PATH."
  exit 1
fi